{% if git_user_name and git_user_email %}
[user]
	name = {{ git_user_name }}
	email = {{ git_user_email }}
{% endif %}

[push]
	default = matching

[credential]
	helper = cache --timeout=3600

[core]
	excludesfile = {{ git_core_excludesfile }}
	editor = {{ git_core_editor }}
