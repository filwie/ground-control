# vi: set ft=ruby :

VAGRANT_BOX = "archlinux/archlinux"
VAGRANT_HOSTNAME = "arch"
CPU_CORES = 2
MEMORY = 4048
VRAM = 64

SYNC_SRC = "../"
SYNC_DEST = "/opt/ground-control"

ANSIBLE_DIRECTORY = SYNC_DEST + "/ansible"
ANSIBLE_PLAYBOOK = "provision.yaml"

GITHUB_USERNAME = ENV["GITHUB_USERNAME"] || ""
GITHUB_TOKEN = ENV["GITHUB_TOKEN"] || ""

ANSIBLE_PLAYBOOK_TEARDOWN = ANSIBLE_DIRECTORY + "/teardown.yaml"
ANSIBLE_ARGS = ["-e github_username=" + GITHUB_USERNAME,
                "-e github_api_token=" + GITHUB_TOKEN]

$setup_script = <<-SCRIPT
  sed -i 's/^#DNS=.*$/DNS=1.1.1.1/' /etc/systemd/resolved.conf
  systemctl restart systemd-resolved
  echo 'Server = https://ftp.icm.edu.pl/pub/Linux/dist/archlinux/$repo/os/$arch' > /etc/pacman.d/mirrorlist
  [[ -f /gpg_recreate_timestamp ]] || {
    rm -rf /etc/pacman.d/gnupg
    pacman-key --init
    pacman-key --populate archlinux
  } && echo "$(date)" > /gpg_recreate_timestamp
  command -v python &> /dev/null || pacman -Sy --needed --noconfirm python
SCRIPT

Vagrant.configure("2") do |config|
  config.vm.box = VAGRANT_BOX
  config.vm.hostname = VAGRANT_HOSTNAME

  config.vm.synced_folder SYNC_SRC, SYNC_DEST

  config.vm.provider :virtualbox do |vbox|
    vbox.name = VAGRANT_HOSTNAME
    vbox.gui = false
    vbox.memory = MEMORY
    vbox.cpus = CPU_CORES
    vbox.customize ["modifyvm", :id, "--vram", VRAM]
    vbox.customize ["modifyvm", :id, "--accelerate3d", "on"]
    vbox.customize ['modifyvm', :id, '--clipboard', 'bidirectional']
  end

  config.vm.provider :libvirt do |lvirt|
    lvirt.driver = "kvm"
    lvirt.memory = MEMORY
    lvirt.cpus = CPU_CORES
    lvirt.video_type = "vga"
    lvirt.video_vram = VRAM * 1024
    lvirt.connect_via_ssh = false
    lvirt.management_network_name = "vagrant"
    lvirt.management_network_address = "10.10.10.0/24"
  end

  # no python equals no Ansible
  config.vm.provision "shell", inline: $setup_script

  config.vm.provision "ansible_local" do |ansible|
#    ansible.compatibility_mode = "2.0"
    ansible.playbook = ANSIBLE_PLAYBOOK
    ansible.provisioning_path = ANSIBLE_DIRECTORY
    ansible.extra_vars = {}
    ansible.raw_arguments = ANSIBLE_ARGS
    ansible.tags = ["github"]
    ansible.skip_tags = ["kvm"]
  end

  config.trigger.before :destroy do |trigger|
    trigger.info = "Running teardown playbook"
    trigger.run_remote = {
      inline: "ansible-playbook " + ANSIBLE_PLAYBOOK_TEARDOWN,
      args: ANSIBLE_ARGS
    }
  end
end
